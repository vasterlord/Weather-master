<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="@drawable/current_weather_gradient">

    <TextView
        tools:text="Partly cloudy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvCityFl"
        android:textColor="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_above="@+id/ivImageViewFavorite"
        android:layout_toStartOf="@+id/tvSummaryFavLoc"
        android:layout_gravity="left|center_vertical"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        android:id="@+id/tetvTperatureFavLoc"
        android:textColor="#ffffffff"
        android:textSize="24dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/tvCityFl"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|center_vertical" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivImageViewFavorite"
        android:src="@drawable/d02"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvCityFl"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="60dp" />

</FrameLayout>